[global/wm]
include-file = $HOME/.config/polybar/modules.ini
include-file = $HOME/.config/polybar/colors.ini

[settings]
pseudo-transparency = true

[bar/main]
monitor = eDP1
width = 99%
height = 32
fixed-center = true

line-size = 3

background = ${colors.background}
foreground = ${colors.foreground}

offset-x = 0.5%
offset-y = 0.5%

radius = 10.0

border-top-color = ${colors.background}
border-bottom-color = ${colors.background}

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 0

modules-left = bspwm
modules-center = 
modules-right = backlight margin pulseaudio margin memory margin cpu margin temperature margin battery margin wlan margin date

include-file = $HOME/.config/polybar/fonts.ini

tray-position = none
tray-padding = 10

wm-restack = bspwm

cursor-click = pointer

[bar/secondary]
monitor = HDMI1
width = 99%
height = 32
fixed-center = true

line-size = 3

background = ${colors.background}
foreground = ${colors.foreground}

offset-x = 0.5%
offset-y = 0.5%

radius = 10.0

border-top-color = ${colors.background}
border-bottom-color = ${colors.background}

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 0

modules-left = bspwm
modules-center =
modules-right = pulseaudio margin memory margin cpu margin temperature margin battery margin wlan margin date

include-file = $HOME/.config/polybar/fonts.ini

tray-position = none
tray-padding = 10

wm-restack = bspwm

cursor-click = pointer
