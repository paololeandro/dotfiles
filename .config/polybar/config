[global/wm]
include-file = $HOME/.config/polybar/modules.ini
include-file = $HOME/.config/polybar/colors.ini

[bar/main]
monitor = eDP1
width = 100%
height = 26
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

border-top-size = 7
border-bottom-size = 7

border-top-color = ${colors.background}
border-bottom-color = ${colors.background}

line-size = 3

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 0

modules-left = bspwm
modules-center = 
modules-right = backlight margin pulseaudio margin memory margin cpu margin temperature margin battery margin date margin wlan margin powermenu

include-file = $HOME/.config/polybar/fonts.ini

tray-position = right
tray-padding = 4

wm-restack = bspwm

cursor-click = pointer

[bar/secondary]
monitor = HDMI1
width = 100%
height = 26
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

border-top-size = 7
border-bottom-size = 7

border-top-color = ${colors.background}
border-bottom-color = ${colors.background}

line-size = 3

padding-left = 1
padding-right = 1

module-margin-left = 0
module-margin-right = 0

modules-left = bspwm
modules-center =
modules-right = pulseaudio margin memory margin cpu margin temperature margin battery margin date margin wlan margin powermenu

include-file = $HOME/.config/polybar/fonts.ini

tray-position = none
tray-padding = 4

wm-restack = bspwm

cursor-click = pointer
